{
	"scripts": {
		"test": "jest --coverage --noStackTrace --silent",
		"test:unit": "jest",
		"live": "live-server --ignore=node_modules"
	},
	"jest": {
		"verbose": false,
		"setupFiles": [
			"./setup-jest.js"
		],
		"collectCoverageFrom": [
			"**/*.{js,jsx}",
			"!**/app/**",
			"!**/assets/**",
			"!**/external/**",
			"!**/fixtures/**",
			"!**/lcov-report/**"
		]
	},
	"type": "module",
	"dependencies": {
		"express": "^4.18.2",
		"global": "^4.4.0",
		"jest-cli": "^29.5.0",
		"jquery": "^3.6.4",
		"path": "^0.12.7"
	},
	"devDependencies": {
		"@babel/preset-env": "^7.20.2",
		"@testing-library/dom": "^9.0.1",
		"@testing-library/jest-dom": "^5.16.5",
		"@testing-library/user-event": "^14.4.3",
		"babel-jest": "^29.5.0",
		"jest": "^29.5.0",
		"jest-environment-jsdom": "^29.5.0",
		"jest-html-reporter": "^3.7.0"
	}
}
